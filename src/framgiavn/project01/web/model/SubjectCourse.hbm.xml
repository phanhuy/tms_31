<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project01.web.model.SubjectCourse" table="subjects_courses" 
		dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" length="11" />
            <generator class="identity" />
		</id>
		<many-to-one name="subjects" class="framgiavn.project01.web.model.Subject" fetch="join">
			<column name="subject_id" not-null="true" />
		</many-to-one>
		<many-to-one name="courses" class="framgiavn.project01.web.model.Course" fetch="join">
			<column name="course_id" not-null="true" />
		</many-to-one>
	</class>
</hibernate-mapping>