<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project01.web.model.Task" table="tasks"
		dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" length="11" />
			<generator class="identity" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" length="100" />
		</property>
		<property name="detail" type="java.lang.String">
			<column name="detail" />
		</property>
		<many-to-one name="subjects" class="framgiavn.project01.web.model.Subject"
			fetch="join">
			<column name="subject_id" not-null="true" />
		</many-to-one>
	</class>
	<query name="Task.SelectTaskById">
		select task
		from Task task
		where task.id = :id
	</query>
	<query name="Task.SelectTaskAll">
		select task
		from Task task
	</query>

	<query name="Task.DeleteTaskById">
		delete from Task task where task.id = :id
	</query>
</hibernate-mapping>